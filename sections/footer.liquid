<footer class="footer">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <div class="footer-info">
                    <a href="/" class="footer-info__logo">
                        <img src="{{ section.settings.footer_logo | img_url: 'master' }}" alt="image" class="imgFluid" loading="lazy">
                    </a>
                  {{ section.settings.content }}
                    
                </div>
            </div>
            <div class="col-lg-3 offset-lg-1">
                <div class="footer__quickLinks">
                    <div class="title">Quick Links</div>

                  {%- assign footer_menu = section.settings.footer_menu -%}
{%- if footer_menu != blank -%}
  {% assign linklist = footer_menu | linklist %}
  {% if linklist.links.size > 0 %}
    <ul>
      {% for link in linklist.links %}
        <li><a href="{{ link.url }}">{{ link.title | escape }}</a></li>
      {% endfor %}
    </ul>
  {% endif %}
{%- endif -%}

            
                     
                </div>
            </div>
            <div class="col-lg-2">
                <div class="footer__quickLinks">
                    <div class="title">Other Links</div>

                   {%- assign footer_menu_2 = section.settings.footer_menu_2 -%}
{%- if footer_menu_2 != blank -%}
  {% assign linklist = footer_menu_2 | linklist %}
  {% if linklist.links.size > 0 %}
    <ul>
      {% for link in linklist.links %}
        <li><a href="{{ link.url }}">{{ link.title | escape }}</a></li>
      {% endfor %}
    </ul>
  {% endif %}
{%- endif -%}

                   
                
                  
                </div>
            </div>
            <div class="col-lg-3">
                <div class="footer__quickLinks">
                    <div class="title">Contact Info</div>
                  
                    {%- assign footer_menu_3 = section.settings.footer_menu_3 -%}
                      {%- if footer_menu_3 != blank -%}
                        {% assign linklist = footer_menu_3 | linklist %}
                        {% if linklist.links.size > 0 %}
                          <ul>
                            {% for link in linklist.links %}
                              <li><a href="{{ link.url }}">{{ link.title | escape }}</a></li>
                            {% endfor %}
                          </ul>
                        {% endif %}
                      {%- endif -%}
                  
                  {%- comment -%}
                  
                    <ul>
                        <li><a href="tel:31279994069"> (312) 799-94069</a></li>
                        <li><a href="mailto:sparkinstyle@gmai.com"> sparkinstyle@gmail.com</a></li>
                    </ul>
                    {%- endcomment -%}
                </div>
            </div>
        </div>
    </div>
    <div class="footer__copyright">
        <p>&copy; 2023, Spark In Style</p>
    </div>
</footer>



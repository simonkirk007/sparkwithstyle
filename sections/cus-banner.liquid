<div class="banner-wrapper">

<div class="banner banner--overlay banner-slider">
    <img src="{{ section.settings.image | img_url: 'master' }}" alt="image" class="imgFluid banner__bg">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-7">
                <div class="banner-content">
                    <h1 class="banner-content__subHeading">{{ section.settings.sub_title }}</h1>
                    <h2 class="banner-content__heading">{{ section.settings.title }}</h2>
                    {{ section.settings.content }}
                  
                    <a href="{{ section.settings.button_link }}" class="themeBtn">{{ section.settings.button_text }}</a>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="banner banner--overlay banner-slider">
    <img src="{{ section.settings.image | img_url: 'master' }}" alt="image" class="imgFluid banner__bg">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-7">
                <div class="banner-content">
                    <h1 class="banner-content__subHeading">{{ section.settings.sub_title }}</h1>
                    <h2 class="banner-content__heading">{{ section.settings.title }}</h2>
                    {{ section.settings.content }}
                  
                    <a href="{{ section.settings.button_link }}" class="themeBtn">{{ section.settings.button_text }}</a>
                </div>
            </div>
        </div>
    </div>
</div>

</div>


{% schema %}
    {
      "name": "Cus Banner",
      "tag": "section",
      "class": "announcement-bar-section",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "t:sections.multicolumn.blocks.column.settings.image.label"
        },
        {
          "type": "text",
          "id": "sub_title",
          "default": "Welcome to Our Website",
          "label": "Sub Title"
        },
        {
          "type": "text",
          "id": "title",
          "default": "SPARK IN <span class='box-text'>STYLE</span>",
          "label": "Title"
        },
        {
          "type": "richtext",
          "id": "content",
          "default": "<p>I am Susan Thomas, originally from Gujarat, India now residing in Orland Park, IL. Fashion is my passion, especially Indian outfits. I hold high values to modesty, traditional, but yet classy clothing.</p>",
          "label": "Content"
        },
        {
          "type": "text",
          "id": "button_text",
          "default": "Collections",
          "label": "Button Text"
        },
        {
            "type": "url",
            "id": "button_link",
            "label": "Button Link"
          }
    ],
    "presets": [
        {
          "name": "Cus Banner"
        }
      ]
    }
    {% endschema %}
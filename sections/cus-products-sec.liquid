<div class='products mb-5 pb-5'>
    <div class='container'>
        <div class='row justify-content-center mb-4'>
            <div class='col-lg-10'>
                <div class='section-content text-center'>
                    <h3 class='heading'>{{ section.settings.title }}</h3>
                </div>
            </div>
        </div>
        <div class='row productSlider'>

        {% assign selected_collection = section.settings.collection %}
        {% for product in collections[selected_collection].products %}
            <div class='col-lg-3'>
                <div class='products-card card-hover'>
                    <a href="{{ product.url }}" class='products-card__img card-hover__img'>
                        <img src='{{ product.featured_image.src | img_url: 'large' }}' alt='image' class='imgFluid' loading="lazy">
                    </a>
                    <div class='products-card__content'>
                        <div class="category">{{ product.type }}</div>
                        <div class="title"><a href="{{ product.url }}">{{ product.title }}</a></div>

                        <div class="price">{{ product.price | money }}</div>
                      
                        {% if product.options contains 'Color' %}
                          <ul class="product-colors">
                            {% for variant in product.variants %}
                              {% if variant.available %}
                                {% assign color_index = 0 %}
                                {% for option in product.options %}
                                  {% if option == 'Color' %}
                                    {% assign color_index = forloop.index0 %}
                                  {% endif %}
                                {% endfor %}
                                {% assign color = variant.options[color_index] %}
                                {% if color %}
                                  <li class="product-color" style="background-color: {{ color | handleize }};">
                                    <a href="{{ variant.url }}" title="{{ variant.title }}">{{ color }}</a>
                                  </li>
                                {% endif %}
                              {% endif %}
                            {% endfor %}
                          </ul>
                        {% endif %}



                      
                        <div class="d-flex justify-content-center m-0 mb-3 varition-btn">
                            <a href="#" style="background-color: #FAB528;"></a>
                            <a href="#" style="background-color: #FC043A;"></a>
                            <a href="#" style="background-color: #223F9A;"></a>
                            <a href="#" style="background-color: #D9D9D9;"></a>
                            <a href="#" style="background-color: #044343;"></a>
                            <a href="#" style="background-color: #222222;"></a>
                        </div>
                        <a href="{{ product.url }}" class="add">Add</a>
                    </div>
                </div>
            </div>
        {% endfor %}



        </div>
    </div>
</div>


{% schema %}
    {
      "name": "Cus Product Sec",
      "tag": "section",
      "class": "announcement-bar-section",
      "settings": [
        {
        "type": "text",
        "id": "title",
        "default": "Collections",
        "label": "Title"
        }, 
        {
            "type": "collection",
            "id": "collection",
            "label": "t:sections.featured-collection.settings.collection.label"
        }
    ],

    "presets": [
        {
          "name": "Cus Product Sec"
        }
      ]
    }
    {% endschema %}
<div class="page-title">
    <div class="page-title__img">
        <img src="{% if block.settings.banner_img !=blank %}{{ block.settings.banner_img | img_url: 'master' }} {% else %}{{ 'inner-new-banner.jpg' | asset_url }}{% endif %}" alt="image" class="imgFluid">
    </div>
    <div class="page-title__content">
        <h2 class="heading box-text">
          {% if section.settings.page_title != blank %}
            <h2>{{ section.settings.page_title }}</h2>
          {% else %}
            <h2>{{ page.title | escape }}</h2>
          {% endif %}
    </div>
</div>

{% schema %}
{
  "name": "t:sections.main-page.name",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "page_title",
      "label": "Page Title"
    }, 
    {
      "type": "image_picker",
      "id": "banner_img",
      "label": "Banner Image"
    }
  ]
}
{% endschema %}
